<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rune.mastercut.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="Next:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Next"
        android:textAlignment="center"
        android:layout_above="@+id/NextAchieve"
        android:layout_alignLeft="@+id/NextAchieve"
        android:layout_alignStart="@+id/NextAchieve"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/long1"
        android:id="@+id/NextAchieve"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/locked"
        android:id="@+id/Recent3"
        android:layout_alignTop="@+id/Recent2"
        android:layout_toRightOf="@+id/Recent2"
        android:layout_toEndOf="@+id/Recent2" />

    <TextView
        android:text="Recent:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Recent"
        android:layout_above="@+id/Recent2"
        android:layout_toLeftOf="@+id/Recent3"
        android:layout_toStartOf="@+id/Recent3"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/locked"
        android:id="@+id/Recent2"
        android:layout_alignTop="@+id/Recent1"
        android:layout_toRightOf="@+id/Recent1"
        android:layout_toEndOf="@+id/Recent1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/locked"
        android:id="@+id/Recent1"
        android:layout_alignTop="@+id/NextAchieve"
        android:layout_toRightOf="@+id/NextAchieve"
        android:layout_toEndOf="@+id/NextAchieve"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph" />

</RelativeLayout>
